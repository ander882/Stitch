#!/bin/bash

# Assuming files are named like file1.txt, file2.txt, file10.txt, etc.
files=(*.txt)

# Sort the files numerically
sorted_files=($(echo "${files[@]}" | sort -n -t '.' -k 1,1))

# Print the sorted filenames
for file in "${sorted_files[@]}"; do
  echo "$file"
done

Picked up from googling 
'bash file glob numberical sort'
